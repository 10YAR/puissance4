{
    "name": "puissance4",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm:start:client\" \"npm:start:server\" ",
        "start:server": "nodemon",
        "start:client": "vite",
        "start": "node build/index.js",
        "build": "esbuild 'src/server/index.ts' --platform=node --outdir=build --resolve-extensions=.js",
        "test": "vitest",
        "test:watch": "vitest watch"
    },
    "dependencies": {
        "fastify": "^3.25.3",
        "@fastify/static": "5.0.0",
        "@fastify/websocket": "5.0.0",
        "fastify-socket.io": "^4.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.3.0",
        "tailwindcss": "^3.1.8"
    },
    "devDependencies": {
        "@types/tailwindcss": "^3.1.0",
        "@types/jest": "^29.0.0",
        "@types/node": "^18.7.15",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.0.1",
        "@types/ws": "^8.5.3",
        "autoprefixer": "^10.4.8",
        "postcss": "^8.4.16",
        "nodemon": "^2.0.19",
        "ts-node": "^10.9.1",
        "concurrently": "^7.3.0",
        "esbuild": "^0.15.7",
        "typescript": "^4.6.4",
        "vite": "^3.0.7",
        "vitest": "^0.23.1"
    },
    "nodemonConfig": {
        "watch": ["src", "tsconfig.json", ".env"],
        "ext": "ts",
        "ignore": ["src/**/*.spec.ts"],
        "exec": "npm run build && npm start"
    }
}
